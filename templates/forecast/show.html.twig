{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.temperature }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ forecast.humidity }}</td>
            </tr>
            <tr>
                <th>Wind_dir</th>
                <td>{{ forecast.windDir }}</td>
            </tr>
            <tr>
                <th>Wind_spd</th>
                <td>{{ forecast.windSpd }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ forecast.time ? forecast.time|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Timespan</th>
                <td>{{ forecast.timespan ? forecast.timespan|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Overcast</th>
                <td>{{ forecast.overcast }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forecast_index') }}">back to list</a>

    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>

    {{ include('forecast/_delete_form.html.twig') }}
{% endblock %}
